<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SLB.WellMaps.Views.AboutPage"
             Title="{Binding Title}">
  <ContentPage.Content>
    <StackLayout
      HorizontalOptions="CenterAndExpand"
      VerticalOptions="CenterAndExpand" Spacing="20">
      <Label 
        Text="SLB WellMaps Mobile"
        FontAttributes="Bold"
        FontSize="Large"
        HorizontalOptions="Center"/>
      <Label
        Text="Developed by:"
        FontSize="Medium"
        HorizontalOptions="Center"/>
      <Label
        Text="ING IT @ 2016"
        HorizontalOptions="Center"/>
      
    </StackLayout>
  </ContentPage.Content>
</ContentPage>